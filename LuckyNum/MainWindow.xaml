<Window x:Class="LuckyNum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuckyNum"
        mc:Ignorable="d"
        Title="Счастливое число" Height="190.141" Width="303.521" Background="Black">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Введите число" Foreground="White"/>
        <TextBox x:Name="TBnum" FontSize="14"/>
        <Button Content="Проверить" x:Name="BtnCheck" Click="BtnCheck_Click" Margin="0,10,0,0" FontSize="14"/>
        <Label x:Name="LblOut" Margin="0,10,0,0" Foreground="White"/>
    </StackPanel>
</Window>
